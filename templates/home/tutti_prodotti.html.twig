<!-- Search bar moderna neon glow -->
<div id="search-wrapper">
  <div class="neon-border">
    <input type="text" id="searchInput" placeholder="Search..." />
    <span class="icon search-icon">
      <i class="fas fa-search"></i>
    </span>
    <span class="icon filter-icon">
      <i class="fas fa-filter"></i>
    </span>
  </div>
</div>

<div id="filter-panel" style="display: none; margin-top: -1rem; padding: 1rem; background-color: #1b1b1b; border-radius: 10px; border: 1px solid #888888; text-align: left;">
  <label style="color: white; display: block; margin-bottom: 0.5rem;">
    <input type="checkbox" class="filter-toggle" value="in"> Disponibili
  </label>
  <label style="color: white; display: block; margin-bottom: 0.5rem;">
    <input type="checkbox" class="filter-toggle" value="out"> Non Disponibili
  </label>
  <label style="color: white; display: block; margin-top: 0.5rem;">Scaffale:</label>
  <input type="text" id="filter-scaffale" placeholder="Es. A1, B2..." style="width: 100%; padding: 0.3rem; border-radius: 5px; border: 1px solid #555; background-color: #2a2a2a; color: white;">
</div>

<div class="container">
    <div class="row g-3">
        {% for prodotto in prodotti %}
            <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                <a href="{{ path('app_prodotto_detail', { id: prodotto.id }) }}" class="product-link">
                    <div class="product-card">
                        <div class="status-dot {{ prodotto.isOut() ? 'out' : 'in' }}"></div>
                        {% if prodotto.getImage() %}
                            <img loading="lazy" src="{{ asset(prodotto.getImage()) }}" class="product-image" alt="{{ prodotto.getName() }}">
                        {% else %}
                            <img loading="lazy" src="https://picsum.photos/400/400?random={{ loop.index }}" class="product-image" alt="{{ prodotto.getName() }}">
                        {% endif %}
                        <div class="product-card-content"></div>
                        <div class="product-footer">
                            <span class="product-badge">{{ prodotto.getName() }}</span>
                            <span class="product-info">Scaffale: {{ prodotto.scaffale ?? 'N/A' }}</span>
                        </div>
                    </div>
                </a>
            </div>
        {% else %}
            <div class="col-12 text-white">Nessun prodotto trovato.</div>
        {% endfor %}
    </div>
</div>
<script>
    function debounce(func, delay) {
        let timeoutId;
        return function(...args) {
            clearTimeout(timeoutId);
            timeoutId = setTimeout(() => func.apply(this, args), delay);
        };
    }
    document.getElementById('searchInput').addEventListener('input', debounce(function () {
        const query = this.value.toLowerCase();
        const cards = document.querySelectorAll('.product-card');
        cards.forEach(card => {
            const name = card.querySelector('.product-badge')?.textContent.toLowerCase() || '';
            const scaffale = card.querySelector('.product-info')?.textContent.toLowerCase() || '';
            if (name.includes(query) || scaffale.includes(query)) {
                card.closest('.col-6, .col-sm-4, .col-md-3, .col-lg-2').style.display = '';
            } else {
                card.closest('.col-6, .col-sm-4, .col-md-3, .col-lg-2').style.display = 'none';
            }
        });
    }, 200));

    document.querySelector('.filter-icon').addEventListener('click', () => {
        const panel = document.getElementById('filter-panel');
        panel.style.display = panel.style.display === 'none' ? 'block' : 'none';
    });

    function applyFilters() {
        const stateFilters = Array.from(document.querySelectorAll('.filter-toggle:checked')).map(el => el.value);
        const scaffaleQuery = document.getElementById('filter-scaffale').value.toLowerCase();
        const cards = document.querySelectorAll('.product-card');

        cards.forEach(card => {
            const status = card.querySelector('.status-dot')?.classList.contains('out') ? 'out' : 'in';
            const scaffale = card.querySelector('.product-info')?.textContent.toLowerCase() || '';

            const statusMatch = stateFilters.length === 0 || stateFilters.includes(status);
            const scaffaleMatch = scaffale.includes(scaffaleQuery);

            if (statusMatch && scaffaleMatch) {
                card.closest('.col-6, .col-sm-4, .col-md-3, .col-lg-2').style.display = '';
            } else {
                card.closest('.col-6, .col-sm-4, .col-md-3, .col-lg-2').style.display = 'none';
            }
        });
    }

    document.querySelectorAll('.filter-toggle').forEach(cb => cb.addEventListener('change', applyFilters));
    document.getElementById('filter-scaffale').addEventListener('input', debounce(applyFilters, 300));
</script>
