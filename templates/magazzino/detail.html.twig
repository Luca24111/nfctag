{% extends 'base.html.twig' %}

{% block title %}Dettaglio Prodotto{% endblock %}

{% block body %}
<link href="https://fonts.cdnfonts.com/css/sf-pro-display" rel="stylesheet">

<style>
    body {
        font-size: 1.1rem;
        font-family: 'SF Pro Text', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background-color: #121212;
        color: white;
        margin: 0;
        padding: 0;
    }

    .header-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem;
    }

    .user-greeting {
        font-size: 1.2rem;
        font-weight: 300;
        color: #b0b0b0;
    }
    .user-greeting strong {
        color: #ffffff;
    }

    .profile-picture {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
    }

    .detail-card {
        background-color: #1e1e1e;
        border-radius: 20px;
        margin: 1rem;
        padding: 1rem;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }

    /* Immagine random in alto */
    .product-image-container {
        width: 100%;
        height: 200px;
        border-radius: 16px;
        overflow: hidden;
        margin-bottom: 1rem;
    }
    .product-image-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: top;
        display: block;
    }

    .detail-card h2 {
        margin: 0 0 0.75rem;
        font-size: 1.6rem;
        font-weight: 500;
        color: white;
    }

    .detail-row {
        margin: 0.75rem 0;
    }
    .detail-label {
        font-weight: 600;
        color: #b0b0b0;
        margin-bottom: 0.25rem;
    }
    .detail-value {
        color: #ffffff;
    }

    .events-section {
        margin: 1.5rem 1rem;
    }
    .events-section h3 {
        font-size: 1.4rem;
        font-weight: 500;
        margin-bottom: 0.75rem;
    }
    .event-item {
        background-color: #2a2a2a;
        border-radius: 12px;
        padding: 0.75rem 1rem;
        margin-bottom: 0.75rem;
        display: flex;
        justify-content: space-between;
    }
    .event-name {
        font-weight: 600;
        color: #ffffff;
    }
    .event-meta {
        font-size: 0.85rem;
        color: #b0b0b0;
        text-align: right;
    }

    .back-link {
        display: block;
        text-align: center;
        margin: 2rem 1rem;
        color: #ffffff;
        text-decoration: none;
        font-weight: 500;
        padding: 0.75rem;
        border: 1px solid #ffffff;
        border-radius: 12px;
    }
    .back-link:hover {
        background-color: rgba(255,255,255,0.1);
    }

    @media (min-width: 576px) {
        .detail-card {
            max-width: 600px;
            margin: 1.5rem auto;
        }
        .product-image-container {
            height: 300px;
        }
        .detail-card h2 {
            font-size: 1.8rem;
        }
        .events-section {
            max-width: 600px;
            margin: 2rem auto;
        }
    }
</style>

<div class="header-row">
    <div class="user-greeting">Ciao, <strong>Cris.</strong></div>
    <img src="https://i.pravatar.cc/46" alt="Profilo" class="profile-picture">
</div>

<div class="detail-card">
    {# Immagine randomica in alto #}
    <div class="product-image-container">
        <img src="https://picsum.photos/400/400?random={{ prodotto.id }}" 
             alt="Anteprima di {{ prodotto.getName() }}">
    </div>

    <h2>{{ prodotto.getName() }}</h2>

    <div class="detail-row">
        <div class="detail-label">Stato:</div>
        <div class="detail-value">
            {{ prodotto.isOut() ? 'Fuori magazzino' : 'In magazzino' }}
        </div>
    </div>

    <div class="detail-row">
        <div class="detail-label">Descrizione:</div>
        <div class="detail-value">{{ prodotto.getDescription() }}</div>
    </div>

    <div class="detail-row">
        <div class="detail-label">Ult. aggiornamento:</div>
        <div class="detail-value">
            {{ prodotto.getUpdateDate() ? prodotto.getUpdateDate().format('d/m/Y H:i') : '-' }}
        </div>
    </div>
</div>

<div class="events-section">
    <h3>Eventi associati</h3>
    {% if prodotto.getEventi()|length > 0 %}
        {% for evento in prodotto.getEventi() %}
            <div class="event-item">
                <div class="event-name">{{ evento.getNome() }}</div>
                <div class="event-meta">
                    {{ evento.getData().format('d/m/Y') }}<br>
                    {{ evento.getCitta() }}
                </div>
            </div>
        {% endfor %}
    {% else %}
        <p style="color:#b0b0b0;">Nessun evento associato a questo prodotto.</p>
    {% endif %}
</div>

<a href="{{ path('app_magazzino') }}" class="back-link">‚Üê Torna alla lista</a>
{% endblock %}
