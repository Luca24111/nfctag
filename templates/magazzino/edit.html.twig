{# templates/magazzino/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifica Prodotto{% endblock %}

{% block body %}
<style>
  body {
    font-family: 'SF Pro Text', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background-color: var(--bg-primary);
    color: var(--text-primary);
    margin: 0;
    padding: 0;
    letter-spacing: -0.04em;
  }

  .edit-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 1rem;
  }

  .page-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: #1e1e1e;
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.3);
  }

  .back-btn {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: #2a2a2a;
    border: none;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .back-btn:hover {
    background: #3a3a3a;
    transform: scale(1.05);
  }

  .page-title {
    font-size: 1.8rem;
    font-weight: 600;
    color: #fff;
    margin: 0;
  }

  .form-card {
    background: #1e1e1e;
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.3);
    margin-bottom: 1.5rem;
  }

  .form-section {
    margin-bottom: 2rem;
  }

  .section-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #fff;
    margin: 0 0 1rem 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .section-title i {
    color: #007AFF;
    font-size: 1rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    font-size: 0.9rem;
    color: #ccc;
  }

  .form-control {
    width: 100%;
    background: #2a2a2a;
    color: #fff;
    border: 1px solid #444;
    border-radius: 12px;
    padding: 0.8rem 1rem;
    font-size: 0.95rem;
    font-family: inherit;
    transition: all 0.3s ease;
    box-sizing: border-box;
  }

  .form-control:focus {
    border-color: #007AFF;
    box-shadow: 0 0 0 3px rgba(0, 122, 255, 0.1);
    outline: none;
  }

  .form-control::placeholder {
    color: #666;
  }

  textarea.form-control {
    resize: vertical;
    min-height: 100px;
  }

  /* Stili per la gestione immagini */
  .image-section {
    background: #2a2a2a;
    border: 1px solid #444;
    border-radius: 16px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .current-image {
    margin-bottom: 1.5rem;
  }

  .current-image img {
    width: 120px;
    height: 120px;
    border-radius: 12px;
    object-fit: cover;
    border: 2px solid #444;
  }

  .image-options {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .image-btn {
    flex: 1;
    background: #3a3a3a;
    color: #fff;
    border: 1px solid #555;
    border-radius: 12px;
    padding: 0.8rem;
    cursor: pointer;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .image-btn:hover {
    background: #4a4a4a;
    border-color: #007AFF;
    transform: translateY(-1px);
  }

  .image-btn.active {
    background: #007AFF;
    border-color: #007AFF;
  }

  .camera-container {
    display: none;
    margin-top: 1rem;
  }

  .camera-container.active {
    display: block;
  }

  #video {
    width: 100%;
    border-radius: 12px;
    background: #000;
  }

  .camera-controls {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .camera-btn {
    flex: 1;
    background: #007AFF;
    color: #fff;
    border: none;
    border-radius: 12px;
    padding: 0.8rem;
    cursor: pointer;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .camera-btn:hover {
    background: #0056cc;
    transform: translateY(-1px);
  }

  .camera-btn.secondary {
    background: #666;
  }

  .camera-btn.secondary:hover {
    background: #555;
  }

  #image-preview {
    max-width: 100%;
    border-radius: 12px;
    margin-top: 1rem;
    display: none;
  }

  .image-info {
    background: #3a3a3a;
    border-radius: 8px;
    padding: 0.8rem;
    margin-top: 1rem;
    font-size: 0.9rem;
    color: #ccc;
  }

  .action-buttons {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  .btn {
    flex: 1;
    padding: 1rem 1.5rem;
    border-radius: 14px;
    font-size: 0.95rem;
    font-weight: 600;
    text-decoration: none;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .btn-save {
    background: linear-gradient(135deg, #007AFF 0%, #0056cc 100%);
    color: white;
    box-shadow: 0 4px 15px rgba(0, 122, 255, 0.3);
  }

  .btn-save:hover {
    background: linear-gradient(135deg, #0056cc 0%, #004499 100%);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 122, 255, 0.4);
  }

  .btn-cancel {
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
  }

  .btn-cancel:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.3);
    transform: translateY(-2px);
  }

  .form-error {
    color: #ff3b30;
    font-size: 0.85rem;
    margin-top: 0.5rem;
  }

  @media (max-width: 768px) {
    .edit-container {
      padding: 0.5rem;
    }

    .form-card {
      padding: 1.5rem;
    }

    .image-options {
      flex-direction: column;
    }

    .action-buttons {
      flex-direction: column;
    }

    .page-header {
      padding: 1rem;
    }

    .page-title {
      font-size: 1.5rem;
    }
  }
</style>

<div class="edit-container">
  <!-- Header con pulsante back -->
  <div class="page-header">
    <a href="{{ path('app_magazzino') }}" class="back-btn">
      <i class="fas fa-arrow-left"></i>
    </a>
    <h1 class="page-title">Modifica Prodotto</h1>
  </div>

  <!-- Form principale -->
  <div class="form-card">
    {{ form_start(form) }}
      
      <!-- Sezione immagine -->
      <div class="form-section">
        <h2 class="section-title">
          <i class="fas fa-image"></i>
          Immagine del prodotto
        </h2>
        
        <div class="image-section">
          {% if prodotto.getImage() %}
            <div class="current-image">
              {% set rawImg = prodotto.getImage() %}
              {% if rawImg %}
                {% set fileName = rawImg|split('/')|last %}
                {% set normalized = (rawImg starts with 'uploads/') or (rawImg starts with '/uploads/') ? (rawImg starts with '/' ? rawImg|slice(1) : rawImg) : 'uploads/images/' ~ fileName %}
                <img src="{{ asset(normalized) }}" alt="Immagine attuale">
              {% endif %}
            </div>
          {% endif %}
          
          <div class="image-options">
            <button type="button" class="image-btn" id="upload-btn">
              <i class="fas fa-upload"></i>
              Carica nuova
            </button>
            <button type="button" class="image-btn" id="camera-btn">
              <i class="fas fa-camera"></i>
              Scatta foto
            </button>
          </div>
          
          <div class="camera-container" id="camera-container">
            <video id="video" autoplay playsinline></video>
            <div class="camera-controls">
              <button type="button" class="camera-btn" id="capture-btn">
                <i class="fas fa-circle"></i> Scatta
              </button>
              <button type="button" class="camera-btn secondary" id="stop-camera-btn">
                <i class="fas fa-times"></i> Chiudi
              </button>
            </div>
          </div>
          
          <img id="image-preview" src="#" alt="Anteprima immagine" />
          
          <div class="image-info" id="image-info" style="display: none;">
            <strong>Ottimizzazione automatica:</strong><br>
            • Ridimensionamento a max 1200x1200px<br>
            • Compressione JPEG al 80%<br>
            • Dimensione ottimizzata per 50.000+ prodotti
          </div>
          
          {{ form_widget(form.immagine, {'attr': {'class': 'image-input', 'style': 'display: none;'}}) }}
    
          {{ form_errors(form.immagine) }}
        </div>
      </div>
      
      <!-- Sezione informazioni -->
      <div class="form-section">
        <h2 class="section-title">
          <i class="fas fa-info-circle"></i>
          Informazioni prodotto
        </h2>
        
        <div class="form-group">
          {{ form_label(form.name, 'Nome prodotto', {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Inserisci il nome del prodotto'}}) }}
          {{ form_errors(form.name) }}
        </div>
        
        <div class="form-group">
          {{ form_label(form.scaffale, 'Scaffale', {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(form.scaffale, {'attr': {'class': 'form-control', 'placeholder': 'Es. A1, B2, C3...'}}) }}
          {{ form_errors(form.scaffale) }}
        </div>
        
        <div class="form-group">
          {{ form_label(form.description, 'Descrizione', {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Descrivi il prodotto...', 'rows': 4}}) }}
          {{ form_errors(form.description) }}
        </div>
      </div>
      
      <!-- Pulsanti azione -->
      <div class="action-buttons">
        <button type="submit" class="btn btn-save">
          <i class="fas fa-save"></i>
          Salva modifiche
        </button>
        <a href="{{ path('app_magazzino') }}" class="btn btn-cancel">
          <i class="fas fa-times"></i>
          Annulla
        </a>
      </div>
      
    {{ form_end(form) }}
  </div>
</div>

<script>
  let stream = null;
  let currentImageSource = null;
  
  // Gestione pulsanti immagine
  document.getElementById('upload-btn').addEventListener('click', function() {
    document.querySelector('.image-input').click();
    setActiveButton('upload-btn');
    currentImageSource = 'upload';
  });
  
  document.getElementById('camera-btn').addEventListener('click', function() {
    startCamera();
    setActiveButton('camera-btn');
    currentImageSource = 'camera';
  });
  
  function setActiveButton(activeId) {
    document.querySelectorAll('.image-btn').forEach(btn => btn.classList.remove('active'));
    document.getElementById(activeId).classList.add('active');
  }
  
  // Gestione fotocamera
  async function startCamera() {
    try {
      stream = await navigator.mediaDevices.getUserMedia({ 
        video: { 
          width: { ideal: 1280 },
          height: { ideal: 720 },
          facingMode: 'environment'
        } 
      });
      
      const video = document.getElementById('video');
      video.srcObject = stream;
      document.getElementById('camera-container').classList.add('active');
      document.getElementById('image-info').style.display = 'block';
      
    } catch (err) {
      console.error('Errore accesso fotocamera:', err);
      alert('Impossibile accedere alla fotocamera. Verifica i permessi.');
    }
  }
  
  // Scatta foto
  document.getElementById('capture-btn').addEventListener('click', function() {
    const video = document.getElementById('video');
    const canvas = document.createElement('canvas');
    const ctx = canvas.getContext('2d');
    
    canvas.width = video.videoWidth;
    canvas.height = video.videoHeight;
    ctx.drawImage(video, 0, 0);
    
    const imageData = canvas.toDataURL('image/jpeg', 0.8);
    document.getElementById('image-preview').src = imageData;
    document.getElementById('image-preview').style.display = 'block';
    
    // Salva nel campo nascosto
          console.log('Foto scattata con successo');
    
    // Chiudi automaticamente la fotocamera
    stopCamera();
    
    // Feedback visivo
    setTimeout(() => {
      alert('Foto scattata con successo! La fotocamera è stata chiusa automaticamente.');
    }, 100);
  });
  
  // Chiudi fotocamera
  document.getElementById('stop-camera-btn').addEventListener('click', stopCamera);
  
  function stopCamera() {
    if (stream) {
      stream.getTracks().forEach(track => track.stop());
      stream = null;
    }
    document.getElementById('camera-container').classList.remove('active');
  }
  
  // Gestione upload file
  function previewImage(event) {
    const input = event.target;
    const preview = document.getElementById('image-preview');
    const file = input.files[0];
    
    if (file) {
      const reader = new FileReader();
      reader.onload = function(e) {
        preview.src = e.target.result;
        preview.style.display = 'block';
        document.getElementById('image-info').style.display = 'block';
        
        // Pulisci campo foto scattata
  
      };
      reader.readAsDataURL(file);
    } else {
      preview.src = '#';
      preview.style.display = 'none';
    }
  }
  
  // Event listener per upload file
  document.querySelector('.image-input').addEventListener('change', previewImage);
  
  // Pulisci fotocamera quando si lascia la pagina
  window.addEventListener('beforeunload', stopCamera);
</script>
{% endblock %}