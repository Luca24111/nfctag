{# templates/eventi/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifica Evento{% endblock %}

{% block body %}
<link href="https://fonts.cdnfonts.com/css/sf-pro-display" rel="stylesheet">

<style>
    body {
        font-size: 1.1rem;
        font-family: 'SF Pro Text', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background-color: var(--bg-primary);
        color: var(--text-primary);
        margin: 0;
        padding: 0;
    }
    .page-title {
        font-size: 2rem;
        font-weight: 450;
        color: #ffffff;
        text-align: left;
        padding: 0 1rem 1rem;
        letter-spacing: -0.04em;
    }
    .form-section {
        background: rgba(28, 28, 30, 0.95);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 20px;
        padding: 2rem;
        margin: 0 1rem 2rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        text-align: left;
    }
    .form-group {
        margin-bottom: 1.5rem;
    }
    label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        font-size: 0.9rem;
        color: #cccccc;
    }
    .form-control-dark {
        width: 100%;
        background: rgba(44, 44, 46, 0.8);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 1rem 1.2rem;
        font-size: 0.95rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .form-control-dark:focus {
        border-color: #007aff;
        box-shadow: 0 0 0 3px rgba(0, 122, 255, 0.1);
        outline: none;
        background: rgba(44, 44, 46, 0.9);
    }
    .action-buttons {
        display: flex;
        gap: 0.75rem;
        margin-top: 1rem;
    }
    .toggle-btn {
        flex: 1;
        background: linear-gradient(135deg, #007aff 0%, #0056cc 100%);
        color: #ffffff;
        border: none;
        border-radius: 16px;
        font-size: 0.9rem;
        font-weight: 600;
        padding: 0.8rem;
        box-shadow: 0 4px 12px rgba(0, 122, 255, 0.3);
        text-decoration: none;
        text-align: center;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    .toggle-btn:hover {
        transform: translateY(-2px) scale(1.02);
        box-shadow: 0 6px 16px rgba(0, 122, 255, 0.4);
    }
    @media (min-width: 576px) {
        .form-section {
            max-width: 600px;
            margin: 1.5rem auto 2rem;
        }
    }
</style>

<h1 class="page-title">Modifica Evento</h1>

<div class="form-section">
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.nome) }}
            {{ form_widget(form.nome, {'attr': {'class': 'form-control-dark'}}) }}
            {{ form_errors(form.nome) }}
        </div>
        <div class="form-group">
            {{ form_label(form.citta) }}
            {{ form_widget(form.citta, {'attr': {'class': 'form-control-dark'}}) }}
            {{ form_errors(form.citta) }}
        </div>
        <div class="form-group">
            {{ form_label(form.data) }}
            {{ form_widget(form.data, {'attr': {'class': 'form-control-dark'}}) }}
            {{ form_errors(form.data) }}
        </div>
        <div class="action-buttons">
            <button type="submit" class="toggle-btn">Salva</button>
            <a href="{{ path('app_eventi') }}" class="toggle-btn">Annulla</a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
