{# templates/eventi/detail.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Dettaglio Evento{% endblock %}

{% block body %}
{% for label, messages in app.flashes %}
  <div class="alert alert-{{ label }}">
    {% for message in messages %}
      <div>{{ message }}</div>
    {% endfor %}
  </div>
{% endfor %}

<link href="https://fonts.cdnfonts.com/css/sf-pro-display" rel="stylesheet">

<style>
  body {
    font-size: 1.1rem;
    font-family: 'SF Pro Text', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background-color: #121212;
    color: white;
    margin: 0;
    padding: 0;
  }

  .action-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
  }
  .action-buttons .btn {
    flex: 1;
    text-decoration: none;
    text-align: center;
    font-size: 0.9rem;
    font-weight: 500;
    padding: 0.6rem;
    border-radius: 12px;
    cursor: pointer;
    transition: background-color 0.2s;
  }
  .btn-modify {
    background-color: #fff;
    color: #424244;
    border: none;
  }
  .btn-modify:hover {
    background-color: #f5f5f5;
  }
  .btn-delete {
    background-color: #dc3545;
    color: #fff;
    border: none;
  }
  .btn-delete:hover {
    background-color: #b02a37;
  }
  .detail-card {
    background-color: #1e1e1e;
    border-radius: 20px;
    margin: 0 1rem;
    padding: 1rem;
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
  }
  .detail-card h2 {
    margin: 0 0 0.75rem;
    font-size: 1.8rem;
    font-weight: 500;
  }
  .detail-row {
    margin: 0.75rem 0;
  }
  .detail-label {
    font-weight: 600;
    color: #b0b0b0;
    margin-bottom: 0.25rem;
  }
  .detail-value {
    color: #ffffff;
  }
  .associate-form {
    margin: 1rem;
    border-radius: 12px;
    overflow: hidden;
    background-color: #1e1e1e;
    box-shadow: 0 2px 6px rgba(0,0,0,0.3);
  }
  .associate-form summary {
    list-style: none;
    cursor: pointer;
    padding: 1rem;
    font-weight: 600;
    color: #ffffff;
    font-size: 0.95rem;
    user-select: none;
  }
  .associate-form summary::-webkit-details-marker { display: none; }
  .associate-form summary:after {
    content: "▼";
    float: right;
    transition: transform 0.2s ease;
  }
  .associate-form[open] summary:after {
    transform: rotate(-180deg);
  }
  .associate-form .form-content {
    padding: 0 1rem 1rem;
    text-align: left;
  }
  .toggle-btn {
    background-color: #ffffff;
    color: #424244;
    border: none;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.6rem 1rem;
    box-shadow: 0 2px 6px rgba(0,0,0,0.2);
    cursor: pointer;
    display: inline-block;
  }
  .toggle-btn:hover {
    background-color: #f5f5f5;
    box-shadow: 0 3px 8px rgba(0,0,0,0.25);
  }
  .associated-section {
    margin: 1.5rem 1rem;
  }
  .associated-section h3 {
    font-size: 1.4rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
  }
  .assoc-item {
    position: relative;
    background-color: #2a2a2a;
    border-radius: 12px;
    padding: 0.75rem 3rem 0.75rem 1rem;
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    transition: transform 0.2s ease;
  }
  .assoc-item:hover {
    transform: scale(1.02);
  }
  .assoc-thumb {
    flex: 0 0 60px;
    height: 60px;
    object-fit: cover;
    border-radius: 12px;
    margin-right: 1rem;
  }
  .assoc-details {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
  }
  .assoc-name {
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 0.25rem;
  }
  .assoc-status {
    font-size: 0.85rem;
    color: #b0b0b0;
  }
  .assoc-link {
    text-decoration: none;
    color: inherit;
  }
  .remove-form {
    position: absolute;
    top: 50%;
    right: 12px;
    transform: translateY(-50%);
  }
  .remove-btn {
    background: none;
    border: none;
    color: #ccc;
    font-size: 1.4rem;
    cursor: pointer;
    transition: color 0.2s ease;
  }
  .remove-btn:hover {
    color: #f66;
  }
  .back-link {
    display: block;
    text-align: center;
    margin: 2rem 1rem;
    color: #ffffff;
    text-decoration: none;
    padding: 0.75rem;
    border: 1px solid #ffffff;
    border-radius: 12px;
  }
  .back-link:hover {
    background-color: rgba(255,255,255,0.1);
  }
  @media (min-width: 576px) {
    .detail-card,
    .associate-form,
    .associated-section {
      max-width: 600px;
      margin: 0 auto;
    }
  }
</style>



<details class="associate-form">
  <summary>Associa prodotto via NFC</summary>
  <div class="form-content">
    <form id="scan-nfc-form"
          action="{{ path('app_evento_add_nfc', { id: evento.id }) }}"
          method="post">
      <input type="hidden" name="nfc_Id" id="nfc-tag-id">
      <button type="button" class="toggle-btn" id="scan-btn">
        Scansiona prodotto
      </button>
    </form>
  </div>
</details>

<div class="detail-card">
  <h2>{{ evento.getNome() }}</h2>
  <div class="detail-row">
    <div class="detail-label">Data:</div>
    <div class="detail-value">{{ evento.getData()|date('d/m/Y') }}</div>
  </div>
  <div class="detail-row">
    <div class="detail-label">Città:</div>
    <div class="detail-value">{{ evento.getCitta() }}</div>
  </div>
  <div class="action-buttons">
    <a href="{{ path('app_evento_modifica', { id: evento.id }) }}" class="btn btn-modify">Modifica</a>
    <form method="post"
          action="{{ path('app_evento_delete', { id: evento.id }) }}"
          onsubmit="return confirm('Eliminare questo evento?')"
          style="flex:1;">
      <input type="hidden" name="_token" value="{{ csrf_token('delete-evento' ~ evento.id) }}">
      <button type="submit" class="btn btn-delete">Elimina</button>
    </form>
  </div>
</div>

<div class="associated-section">
  <h3>Prodotti associati</h3>
  {% if prodotti|length > 0 %}
    {% for prodotto in prodotti %}
      <div class="assoc-item">
        <a href="{{ path('app_prodotto_detail', { id: prodotto.id }) }}" class="assoc-link">
          <img src="https://picsum.photos/400/400?random={{ loop.index }}"
               alt="{{ prodotto.getName() }}"
               class="assoc-thumb">
          <div class="assoc-details">
            <div class="assoc-name">{{ prodotto.getName() }}</div>
            <div class="assoc-status">
              {{ prodotto.isOut() ? 'Fuori magazzino' : 'In magazzino' }}
            </div>
          </div>
        </a>
        <form method="post"
              action="{{ path('app_evento_remove_prodotto', { id: evento.id, productId: prodotto.id }) }}"
              class="remove-form"
              onsubmit="return confirm('Rimuovere questo prodotto dall\'evento?')">
          <input type="hidden" name="_token" value="{{ csrf_token('remove-prodotto' ~ evento.id ~ '-' ~ prodotto.id) }}">
          <button type="submit" class="remove-btn" aria-label="Rimuovi">&times;</button>
        </form>
      </div>
    {% endfor %}
  {% else %}
    <p style="color:#b0b0b0;">Nessun prodotto associato a questo evento.</p>
  {% endif %}
</div>

<script>
  console.log('Initializing NFC scan handler');
  const scanBtn = document.getElementById('scan-btn');
  if (scanBtn) {
    scanBtn.addEventListener('click', async () => {
      if (!('NDEFReader' in window)) {
        alert("Il tuo dispositivo non supporta NFC.");
        return;
      }
      try {
        const ndef = new NDEFReader();
        await ndef.scan();
        ndef.addEventListener('readingerror', error => {
          alert("Errore durante la lettura NFC: " + (error.message || error));
        });
        ndef.addEventListener('reading', async ({ message }) => {
          let nfc_Id = null;
          for (const record of message.records) {
            if (record.recordType === "text") {
              nfc_Id = new TextDecoder().decode(record.data);
              break;
            }
          }
          if (nfc_Id && !isNaN(Number(nfc_Id))) {
            console.log('Tag ID letto:', nfc_Id);
            document.getElementById('nfc-tag-id').value = nfc_Id;
            const feedback = document.createElement('div');
            feedback.textContent = "✓ Tag riconosciuto";
            feedback.style.position = 'fixed';
            feedback.style.top = '20px';
            feedback.style.left = '50%';
            feedback.style.transform = 'translateX(-50%)';
            feedback.style.padding = '1rem 2rem';
            feedback.style.backgroundColor = '#4CAF50';
            feedback.style.color = 'white';
            feedback.style.borderRadius = '12px';
            feedback.style.fontSize = '1rem';
            feedback.style.zIndex = '1000';
            feedback.style.boxShadow = '0 2px 6px rgba(0,0,0,0.3)';
            document.body.appendChild(feedback);
            setTimeout(() => {
              feedback.remove();
              document.getElementById('scan-nfc-form').submit();
            }, 1200);
          } else {
            alert("Tag NFC non valido o non compatibile.");
          }
        });
      } catch (error) {
        alert("Errore NFC: " + error.message);
      }
    });
  } else {
    console.error('Bottone scan-btn non trovato');
  }
</script>

{% endblock %}