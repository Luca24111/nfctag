{% extends 'base.html.twig' %}

{% block title %}Evento creato{% endblock %}

{% block body %}
<link href="https://fonts.cdnfonts.com/css/sf-pro-display" rel="stylesheet">

<style>
    body {
        font-size: 1.1rem;
        font-family: 'SF Pro Text', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background-color: #121212;
        color: white;
        margin: 0;
        padding: 0;
        text-align: center;
    }

    .header-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem;
    }

    .user-greeting {
        font-size: 1.2rem;
        font-weight: 300;
        color: #b0b0b0;
    }
    .user-greeting strong {
        color: #ffffff;
    }

    .profile-picture {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
    }

    .success-wrapper {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        margin: 2rem 1rem;
    }

    .success-icon {
        font-size: 4rem;
        color: #ffffff;      /* icona bianca */
        margin: 0 auto 1rem; /* centrata orizzontalmente */
    }

    .page-title {
        font-size: 2rem;
        font-weight: 450;
        letter-spacing: -0.04em;
        color: #ffffff;
        margin: 0 0 0.5rem;
        text-align: left;
        width: 100%;
        padding: 0 1rem;
    }

    .success-text {
        font-size: 0.95rem;
        color: #aaa;
        margin: 0 1rem 2rem;
        text-align: left;
    }

    .toggle-btn {
        background-color: #ffffff;
        color: #424244;
        border: none;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.6rem 1rem;
        box-shadow: 0 2px 6px rgba(0,0,0,0.2);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        cursor: pointer;
        margin: 0 auto;
    }
    .toggle-btn:hover {
        background-color: #f5f5f5;
        box-shadow: 0 3px 8px rgba(0,0,0,0.25);
    }

    @media (max-width: 576px) {
        .page-title {
            font-size: 1.6rem;
        }
        .toggle-btn {
            width: 100%;
            justify-content: center;
            font-size: 0.75rem;
            padding: 0.5rem 0.8rem;
        }
    }
</style>

<div class="header-row">
    <div class="user-greeting">Ciao, <strong>Cris.</strong></div>
    <img src="https://i.pravatar.cc/46" alt="Profilo" class="profile-picture">
</div>

<div class="success-wrapper">
    <div class="success-icon">
        <i class="fas fa-calendar-check"></i>
    </div>
    <h1 class="page-title">Perfetto!</h1>
    <div class="success-text">Il tuo evento Ã¨ stato creato.</div>
    <a href="{{ path('app_eventi') }}" class="toggle-btn">Torna alla Home</a>
</div>
{% endblock %}
