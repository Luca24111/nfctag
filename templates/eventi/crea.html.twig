{% extends 'base.html.twig' %}

{% block title %}Crea evento{% endblock %}

{% block body %}
<link href="https://fonts.cdnfonts.com/css/sf-pro-display" rel="stylesheet">

<style>
    body {
        font-size: 1.1rem;
        font-family: 'SF Pro Text', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background-color: var(--bg-primary);
        color: var(--text-primary);
        margin: 0;
        padding: 0;
        text-align: center;
    }

    /* Allineo il titolo della pagina a sinistra */
    .page-title {
        font-size: 2rem;
        font-weight: 450;
        padding: 0 1rem 1rem;
        letter-spacing: -0.04em;
        color: #fff;
        text-align: left;
    }


    .form-section {
        padding: 0 1rem;
        margin-bottom: 2rem;
        /* testo interno allineato a sinistra */
        text-align: left;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        font-size: 0.9rem;
        color: #cccccc;
        /* assicura lâ€™allineamento a sinistra */
        text-align: left;
    }

    .form-control-dark {
        width: 100%;
        background: rgba(44, 44, 46, 0.8);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 1rem 1.2rem;
        font-size: 0.95rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .form-control-dark:focus {
        border-color: #007aff;
        box-shadow: 0 0 0 3px rgba(0, 122, 255, 0.1);
        outline: none;
        background: rgba(44, 44, 46, 0.9);
    }

    /* Bottone Salva evento proporzionato per smartphone */
    .toggle-btn {
        background: linear-gradient(135deg, #007aff 0%, #0056cc 100%);
        color: #ffffff;
        border: none;
        border-radius: 16px;
        font-size: 0.9rem;
        font-weight: 600;
        padding: 0.8rem 1.5rem;
        box-shadow: 0 4px 12px rgba(0, 122, 255, 0.3);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    .toggle-btn:hover {
        transform: translateY(-2px) scale(1.02);
        box-shadow: 0 6px 16px rgba(0, 122, 255, 0.4);
    }

    .text-end {
        text-align: right;
    }

    @media (max-width: 576px) {
        .page-title {
            font-size: 1.6rem;
        }
        .form-control-dark {
            font-size: 0.9rem;
        }
        .toggle-btn {
            width: 100%;
            justify-content: center;
            font-size: 0.75rem;
            padding: 0.5rem 0.8rem;
        }
    }
</style>



<h1 class="page-title">Crea evento</h1>

<div class="form-section">
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.nome) }}
            {{ form_widget(form.nome, {'attr': {'class': 'form-control-dark'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.citta) }}
            {{ form_widget(form.citta, {'attr': {'class': 'form-control-dark'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.data) }}
            {{ form_widget(form.data, {'attr': {'class': 'form-control-dark'}}) }}
        </div>
        <div class="text-end mt-4">
            <button type="submit" class="toggle-btn">Salva evento</button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
