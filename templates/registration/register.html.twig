{# templates/register.html.twig #}
{% extends 'formBase.html.twig' %}

{% block title %}Registrazione{% endblock %}

{% block body %}
<div class="custom-card text-white">
    <h1>Registrazione</h1>
    {{ form_start(registrationForm, {'attr': {'class': 'mb-3'}}) }}

        {# Campo Nome #}
        <div class="mb-3">
            {{ form_label(registrationForm.name, 'Nome', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control bg-secondary text-white'}}) }}
            {{ form_errors(registrationForm.name) }}
        </div>

        {# Campo Email #}
        <div class="mb-3">
            {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control bg-secondary text-white'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        {# Campo Password #}
        <div class="mb-3">
            {{ form_label(registrationForm.plainPassword.first, 'Password', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control bg-secondary text-white'}}) }}
            {{ form_errors(registrationForm.plainPassword.first) }}
        </div>

        {# Campo Ripeti Password #}
        <div class="mb-3">
            {{ form_label(registrationForm.plainPassword.second, 'Ripeti Password', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control bg-secondary text-white'}}) }}
            {{ form_errors(registrationForm.plainPassword.second) }}
        </div>

        <button type="submit" class="btn btn-custom">Registrati</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}