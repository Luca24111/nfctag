{% extends 'base.html.twig' %}

{% block title %}NFC{% endblock %}

{% block body %}
<style>
    .container {
        padding: 40px 20px;
    }
    h1, h2 {
        color: #ffffff;
    }
    p, span, a {
        color: #d0d0d0;
    }
    a {
        color: #64b5f6;
        text-decoration: none;
    }
    a:hover {
        color: #1e88e5;
    }
    .alert {
        background-color: #1e1e1e;
        border-left: 5px solid #64b5f6;
        color: #ffffff;
    }
    .status-badge {
        font-size: 0.9rem;
        padding: 0.4em 0.8em;
        border-radius: 1rem;
        background-color: #2c2c2c;
        display: inline-block;
        margin-top: 10px;
    }
    .status-badge.ready {
        background-color: #00796b;
        color: #a7ffeb;
    }
    .status-badge.error {
        background-color: #c62828;
        color: #ffcdd2;
    }
    .status-badge.success {
        background-color: #2e7d32;
        color: #b9f6ca;
    }
    .product-card {
        background-color: #1e1e1e;
        border: 1px solid #333;
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
    }
</style>

{% block nfc_content %}{% endblock %}
{% endblock %}
